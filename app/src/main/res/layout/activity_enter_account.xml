<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/event_map_theme"
    android:gravity="center">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="147dp"
            android:layout_height="147dp"
            android:layout_weight="1"
            android:src="@drawable/event_map_logo_reverse"/>

        <TextView
            android:id="@+id/textViewEnter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:textSize="26dp"
            android:textStyle="bold"
            android:textColor="@color/colorDefault"
            android:text="Вход" />


        <EditText
            android:id="@+id/editMailEnter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:ems="10"
            android:padding="10dp"
            android:background="@drawable/rounded_button_white"
            android:hint="Почта:"/>

        <EditText
            android:id="@+id/editPasswordEnter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:ems="10"
            android:padding="10dp"
            android:background="@drawable/rounded_button_white"
            android:inputType="textPassword"
            android:hint="Пароль:"/>

        <Button
            android:id="@+id/buttonEnterAcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/rounded_button_main_theme"
            android:text="Войти" />

    </LinearLayout>




</LinearLayout>